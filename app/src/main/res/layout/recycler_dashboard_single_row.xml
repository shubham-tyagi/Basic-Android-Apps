<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgList"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/book_app_icon_web"
        />
    <TextView
        android:id="@+id/txtRecyclerRowItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="List item"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_toRightOf="@id/imgList"
        style="bold" />

    <TextView
        android:id="@+id/authorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of the Author"
        android:padding="10dp"
        android:textSize="15dp"
        android:layout_toRightOf="@id/imgList"
        android:layout_below="@id/txtRecyclerRowItem"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs 299"
        android:textStyle="bold"
        android:textColor="#165f10"
        android:padding="12dp"
        android:layout_below="@id/authorName"
        android:layout_toRightOf="@id/imgList"/>

    <ImageView
        android:layout_marginLeft="120dp"
        android:id="@+id/starRating"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:padding="2dp"
        android:src="@drawable/star_rating"
        android:layout_toRightOf="@id/txtRecyclerRowItem"/>

    <TextView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text="4.5"
        android:padding="2dp"
        android:textColor="#ecc00e"
        android:layout_toRightOf="@id/starRating"/>
</RelativeLayout>